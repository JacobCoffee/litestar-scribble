{
  "name": "scribbl-frontend",
  "version": "0.1.0",
  "description": "Frontend assets for scribbl-py",
  "type": "module",
  "scripts": {
    "build": "(tailwindcss -i ./src/css/main.css -o ./dist/css/main.css --minify 2>&1 | grep -v '@property') && bun build ./src/js/main.js --outdir ./dist/js --minify",
    "build:css": "tailwindcss -i ./src/css/main.css -o ./dist/css/main.css --minify 2>&1 | grep -v '@property'",
    "build:js": "bun build ./src/js/main.js --outdir ./dist/js --minify",
    "dev": "tailwindcss -i ./src/css/main.css -o ./dist/css/main.css --watch 2>&1 | grep -v '@property'"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.0.0",
    "daisyui": "^5.0.0",
    "lucide": "^0.561.0",
    "tailwindcss": "^4.0.0"
  },
  "devDependencies": {}
}
